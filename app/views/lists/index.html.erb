  <div class="banner" style="background-image: url(<%= asset_path 'theater.jpg' %>);">
    <div class="container display-3">
      <h1>Select a list...</h1>
    </div>
  </div>

<div class="container my-4">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-0" style="width: 100%; border-radius: 8px; overflow: hidden;">
          <div class="card-category" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url(https://picsum.photos/300); height: 180px; background-size: cover; display: flex; align-items: center; justify-content: center;">
            <h5 class="text-center text-white" style="font-weight: bold; text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);">
              <%= link_to list.name, list_path(list.id), class: "text-decoration-none text-white" %>
            </h5>
          </div>
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <%= link_to "Edit", edit_list_path(list), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Remove", list_path(list), class: "btn btn-sm btn-outline-danger",
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
